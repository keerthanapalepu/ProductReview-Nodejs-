<%- include("partials/header"); -%>
    <h1>
        <%= homeContent %>
    </h1>

    <div id="wrap">

        <div id="columns" class="columns_4">
            <% postsList.forEach(function(postItem) { %>
                <figure>
                    <img src="data:image/<%=postItem.image.contentType%>;base64,<%=postItem.image.data.toString('base64')%>">
                    <figcaption>
                        <%= postItem.name%>
                    </figcaption>
                    <span class="price">$ <%= postItem.price %></span>
                    <p class="card-text">
                        <%= postItem.description.substring(0,30) + "..."  %>
                    </p>
                    <a class="button" href="/product/<%= postItem._id %>">Details</a>
                    <a class="button" href="/delete/<%= postItem._id %>">Delete</a>
                    <a class="button" href="/updateProduct/<%= postItem._id %>" ">Update</a>
                </figure>

                <% }) %>
        </div>

    </div>

<%- include("partials/footer"); -%>
